                                    <ff:CachedImage x:Name="imgProfile" Source="{Binding ProfilePicture,Mode=TwoWay}"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill" RetryCount="0" RetryDelay="250" CacheDuration="30" HeightRequest="100" WidthRequest="100"  DownsampleToViewSize="True"/>
