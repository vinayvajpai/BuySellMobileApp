                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfCommand}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <!--BoxView-->
                    <BoxView Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10" BackgroundColor="{Binding ThemeColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="1"/>
