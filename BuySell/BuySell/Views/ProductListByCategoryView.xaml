                            <Grid.Triggers>
                                <Trigger TargetType="Grid"
                                 Property="IsVisible"
                                 Value="False">
                                    <Setter Property="HeightRequest"
                                    Value="0"/>
                                </Trigger>
                            </Grid.Triggers>
                            <Label Text="Loading..."
                           TextColor="{Binding ThemeColor}"
                           VerticalOptions="Center"
